{
    "name": "wijourdil/php-simple-furiganizer",
    "description": "A simple PHP package to generate japanese text with furigana for a given word and reading.",
    "autoload": {
        "psr-4": {
            "Wijourdil\\PhpSimpleFuriganizer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Wilfried Jourdil",
            "email": "wilfried@jourdil.fr"
        }
    ],
    "keywords": [
        "wijourdil",
        "furigana",
        "php",
        "japanese",
        "furiganize",
        "furiganizer"
    ],
    "require": {
        "php": "^8.3",
        "thecodingmachine/safe": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "thecodingmachine/phpstan-safe-rule": "^1.2"
    }
}
